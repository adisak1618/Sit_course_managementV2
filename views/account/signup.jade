extends ../layout

block content
  div.container.radius
    h1.page-title 
      b SIT Login
    if message_auth
      div.warning-message=message_auth
    form(name="signup-form", method="post" action='')
      div.form-group
        label Firstname
        input(type="text", name="firstname").form-control
      div.form-group
        label Lastname
        input(type="text", name="lastname").form-control
      div.form-group
        label Username
        input(type="text", name="username").form-control
      div.form-group
        label Password
        input(type="password", name="password").form-control
      div.form-group
        label Comfirm Password
        input(type="password", name="confirm-password").form-control
      div.form-group
        button(type="submit").btn.btn-info Signup
